@model tech_test.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

@{
    var circleIcon = Model.Images.FirstOrDefault(i => i.Section == "Circle" && i.Key == "CircleIcons");
    var logoPng = Model.Images.FirstOrDefault(i => i.Section == "Logos" && i.Key == "LogoPNG");
    var searchIcon = Model.Images.FirstOrDefault(i => i.Section == "Search" && i.Key == "SearchIcon");
    var topImage = Model.Images.FirstOrDefault(i => i.Section == "Gallery" && i.Key == "TopImage");
    var tallShadow = Model.Images.FirstOrDefault(i => i.Section == "Shadows" && i.Key == "ShadowSmall");
    var panel1 = Model.Images.FirstOrDefault(i => i.Section == "Gallery" && i.Key == "PanelImage1");
    var panel2 = Model.Images.FirstOrDefault(i => i.Section == "Gallery" && i.Key == "PanelImage2");
    var panel3 = Model.Images.FirstOrDefault(i => i.Section == "Gallery" && i.Key == "PanelImage3");
    var iconTxt1 = Model.Images.FirstOrDefault(i => i.Section == "Icons" && i.Key == "Office");
    var iconTxt2 = Model.Images.FirstOrDefault(i => i.Section == "Icons" && i.Key == "Education");
    var iconTxt3 = Model.Images.FirstOrDefault(i => i.Section == "Icons" && i.Key == "Healthcare");
    var iconTxt4 = Model.Images.FirstOrDefault(i => i.Section == "Icons" && i.Key == "Hospitality");
    var bottomImage = Model.Images.FirstOrDefault(i => i.Section == "Gallery" && i.Key == "BtmImage");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.7.5/css/foundation.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    
    <div class="container">

<header>
    <div class="grid-x align-middle"> 

        <div class="cell small-8 medium-4">
            @if (!string.IsNullOrEmpty(logoPng.ImagePath))
            {
                <section class="logo">
                    <img src="@logoPng.ImagePath" alt="@logoPng.AltText" />
                </section>
            }
        </div>

        <div class="cell small-12 medium-8">
            <nav class="nav">
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab1") is var tab1 && tab1 != default ? tab1.Value : "Home")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab2") is var tab2 && tab2 != default ? tab2.Value : "Services")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab3") is var tab3 && tab3 != default ? tab3.Value : "Sustainability")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab4") is var tab4 && tab4 != default ? tab4.Value : "Our Work")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab5") is var tab5 && tab5 != default ? tab5.Value : "Resources")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab6") is var tab6 && tab6 != default ? tab6.Value : "About iOTA")</p>
                <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Header" && t.Key == "Tab7") is var tab7 && tab7 != default ? tab7.Value : "Get in Touch")</p>
    </nav>
            @if (!string.IsNullOrEmpty(searchIcon.ImagePath))
            {
                <section class="searchIcon">
                    <img src="@searchIcon.ImagePath" alt="@searchIcon.AltText" />
                </section>
            }
            <section class="orange-tab">
                 <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Tabs" && t.Key == "Top") is var tabTop && tabTop != default ? tabTop.Value : "")</p>
            </section>
        </div>

    </div>
</header>


@if (!string.IsNullOrEmpty(topImage.ImagePath))
{
    <section class="top-image__container">
        <img src="@topImage.ImagePath" alt="@topImage.AltText" class="top-image__img" />
        <div class="top-image__text">
            <h1>
                @Html.Raw(Model.Texts.FirstOrDefault(t => t.Section == "TxtOnImage" && t.Key == "Title") is var text && text != default ? text.Value : "")
            </h1>
        </div>
        <div class="top-image__tab">
            <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Tabs" && t.Key == "OnImage") is var tabOnImage && tabOnImage != default ? tabOnImage.Value : "")</p>
        </div>

    </section> 

}

@if (!string.IsNullOrEmpty(tallShadow.ImagePath))
{
    <section class="tallShadow">
        <img src="@tallShadow.ImagePath" alt="@tallShadow.AltText" />
    </section>
}

<div class="services-container">
    <div class="circle-container">
        @if (!string.IsNullOrEmpty(circleIcon.ImagePath))
        {
            <section class="Circle">
                <img src="@circleIcon.ImagePath" alt="@circleIcon.AltText" />
            </section>
        }
    </div>

    <div class="services-content"> 
        <h2>
            @Html.Raw(Model.Texts.FirstOrDefault(t => t.Section == "Services" && t.Key == "Heading") is var servicesHeading && servicesHeading != default ? servicesHeading.Value : "")
        </h2>
        <p>
            @Html.Raw(Model.Texts.FirstOrDefault(t => t.Section == "Services" && t.Key == "TxtBlock") is var servicesTxt && servicesTxt != default ? servicesTxt.Value : "")
        </p>

        <a href="#" class="button">
            @(Model.Texts.FirstOrDefault(t => t.Section == "Services" && t.Key == "Tab") is var servicesTab && servicesTab != default ? servicesTab.Value : "")
        </a>
    </div>
</div>




   <h3 class="case-studies-title">
    @(Model.Texts.FirstOrDefault(t => t.Section == "Services" && t.Key == "Heading2") is var servicesHeading2 && servicesHeading2 != default ? servicesHeading2.Value : "") 
</h3>

<div class="case-studies-container">
    @if (!string.IsNullOrEmpty(panel1.ImagePath))
    {
        <div class="case-study-card">
            <section class="panel1img">
                <img src="@panel1.ImagePath" alt="@panel1.AltText" class="case-study-image" />
            </section>
            <div class="case-study-content">
                <h4 class="case-study-subtitle">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Subheading") is var servicesPanelHeading1 && servicesPanelHeading1 != default ? servicesPanelHeading1.Value : "")
                </h4>
                <p class="case-study-description">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Description") is var servicesDescription1 && servicesDescription1 != default ? servicesDescription1.Value : "")
                </p>
                <p class="case-study-footer">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Footer") is var servicesFooter && servicesFooter != default ? servicesFooter.Value : "")
                </p>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(panel2.ImagePath))
    {
        <div class="case-study-card">
            <section class="panel1img">
                <img src="@panel2.ImagePath" alt="@panel2.AltText" class="case-study-image" />
            </section>
            <div class="case-study-content">
                <h4 class="case-study-subtitle">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Subheading") is var servicesPanel2Heading && servicesPanel2Heading != default ? servicesPanel2Heading.Value : "")
                </h4>
                <p class="case-study-footer">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Footer") is var servicesFooter2 && servicesFooter2 != default ? servicesFooter2.Value : "")
                </p>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(panel3.ImagePath))
    {
        <div class="case-study-card">
            <section class="panel1img">
                <img src="@panel3.ImagePath" alt="@panel3.AltText" class="case-study-image" />
            </section>
            <div class="case-study-content">
                <h4 class="case-study-subtitle">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Subheading") is var servicesPanel3Heading && servicesPanel3Heading != default ? servicesPanel3Heading.Value : "")
                </h4>
                <p class="case-study-footer">
                    @(Model.Texts.FirstOrDefault(t => t.Section == "ServicesPanel" && t.Key == "Footer") is var servicesFooter3 && servicesFooter3 != default ? servicesFooter3.Value : "")
                </p>
            </div>
        </div>
    }
</div>

<div class="icon-container">
    @if (!string.IsNullOrEmpty(iconTxt1.ImagePath))
    {
        <section class="icon-section">
            <img class="icon-image" src="@iconTxt1.ImagePath" alt="@iconTxt1.AltText"/>
        </section>
    }

    @if (!string.IsNullOrEmpty(iconTxt2.ImagePath))
    {
        <section class="icon-section">
            <img class="icon-image" src="@iconTxt2.ImagePath" alt="@iconTxt2.AltText"/>
        </section>
    }

    @if (!string.IsNullOrEmpty(iconTxt3.ImagePath))
    {
        <section class="icon-section">
            <img class="icon-image" src="@iconTxt3.ImagePath" alt="@iconTxt3.AltText"/>
        </section>
    }

    @if (!string.IsNullOrEmpty(iconTxt4.ImagePath))
    {
        <section class="icon-section">
            <img class="icon-image" src="@iconTxt4.ImagePath" alt="@iconTxt4.AltText"/>
        </section>
    }
</div>


@if (!string.IsNullOrEmpty(bottomImage.ImagePath))
    {
            <section>
                <img src="@bottomImage.ImagePath" alt="@bottomImage.AltText"/>
            </section>
}

<section class = "bottom">
    <h5>@(Model.Texts.FirstOrDefault(t => t.Section == "Bottom" && t.Key == "Heading") is var bottomHeading && bottomHeading != default ? bottomHeading.Value : "")</h5>
     <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Bottom" && t.Key == "Content") is var bottomContent && bottomContent != default ? bottomContent.Value : "")</p>
      <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Bottom" && t.Key == "Tab1") is var bottomIcon1 && bottomIcon1 != default ? bottomIcon1.Value : "")</p>
       <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Bottom" && t.Key == "Tab2") is var bottomIcon2 && bottomIcon2 != default ? bottomIcon2.Value : "")</p>
       
</section>


<footer class="footer">
    <div class="grid-x grid-padding-x align-middle">
        <div class="cell small-12 medium-4 large-3">
            @if (!string.IsNullOrEmpty(logoPng.ImagePath))
        {
         <section class="footer-logo">
                 <img src="@logoPng.ImagePath" alt="@logoPng.AltText" />
        </section>
}
            <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Copyright") is var footerCopyright && footerCopyright != default ? footerCopyright.Value : "")</p>
             <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "T&C") is var footerTc && footerTc != default ? footerTc.Value : "")</p>
            <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Site") is var footerSite && footerSite != default ? footerSite.Value : "")</p>
        </div>

        <div class="cell small-12 medium-4 large-5">
             <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Office") is var footerOffice && footerOffice != default ? footerOffice.Value : "")</p>
        </div>

        <div class="cell small-12 medium-4 large-4">
            <<p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Contact") is var footerContact && footerContact != default ? footerContact.Value : "")</p>
             <p>@(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Contact2") is var footerContact2 && footerContact2 != default ? footerContact2.Value : "")</p>
            <p>📞 @(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "PhoneNumber") is var footerPhone && footerPhone != default ? footerPhone.Value : "")</p>
            <p>📧 @(Model.Texts.FirstOrDefault(t => t.Section == "Footer" && t.Key == "Email") is var footerEmail && footerEmail != default ? footerEmail.Value : "")</p>
        </div>
    </div>
</footer>

    </body>
</html>
